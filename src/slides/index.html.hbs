---
layout: default.hbs
title: MoOx slides
class: grid-title--quotes
nav: slides
---
<header class="mx-Header">
  <div class="mx-Body grid grid--center">
    <hgroup class="grid__cell unit-8-12--medium title--light">
      <h1>MoOx slides...</h1>
      <h2>...of his previous talks</h2>
    </hgroup>
  </div>
</header>

<div class="mx-Content mx-Body grid">
  <div class="grid__cell">
    <h2>Slides</h2>

    <ul class="Posts">
    {{#each_dateSorted pages}}
    {{#is this.data.layout "slide.hbs"}}
      <li class="Posts-item">
        <time datetime="{{moment data.date format="ddd, DD MMMM YYYY HH:mm:ss ZZ" }}" class="time">{{moment data.date format="DD MMM YYYY" }}</time>
        <a href="{{url this.dest}}" class="title">
          <span class="text-less-visible">[{{ data.lang }}]</span>
          {{ data.title }}
        </a>
      </li>
    {{/is}}
    {{/each_dateSorted}}
    </ul>
  </div>
</div>

{{> footer }}
