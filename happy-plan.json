{
	"name": "MoOx.fr",
	"url": "http://moox.fr/",
	"description": "Web Developer Front-End",
	"baseUrl": "/",
	"paths": {
		"configs": {
			"_": "configs",
			"jekyll": "<%= happyPlan.paths.configs._ %>/jekyll._config.yml",
			"compass": "<%= happyPlan.paths.configs._ %>/compass.config.rb",
			"bowerrc": "<%= happyPlan.paths.configs._ %>/bowerrc"
		},
		"src": {
			"_": ".",
			"jekyll": "<%= happyPlan.paths.src._ %>/jekyll",
			"scripts": "<%= happyPlan.paths.src._ %>/scripts",
			"styles": "<%= happyPlan.paths.src._ %>/styles",
			"images": "<%= happyPlan.paths.src._ %>/images",
			"fonts": "<%= happyPlan.paths.src._ %>/fonts",
			"webfonts": "<%= happyPlan.paths.src._ %>/webfonts",
			"bower_components": "<%= happyPlan.paths.src._ %>/bower_components",
			"medias": "<%= happyPlan.paths.src._ %>/medias"
		},
		"build": {
			"_": "dist",
			"jekyll": "<%= happyPlan.paths.build._ %>",
			"scripts": "<%= happyPlan.paths.build._ %>/_/js",
			"styles": "<%= happyPlan.paths.build._ %>/_/css",
			"images": "<%= happyPlan.paths.build._ %>/_/i",
			"fonts": "<%= happyPlan.paths.build._ %>/_/f",
			"webfonts": "<%= happyPlan.paths.build._ %>/_/f",
			"bower_components": "<%= happyPlan.paths.build._ %>/_/bc",
			"medias": "<%= happyPlan.paths.build._ %>/medias"
		}
	},
	"baseUrls": {
		"_": "<%= happyPlan.baseUrl %>",
		"scripts": "<%= happyPlan.baseUrl %>_/js",
		"styles": "<%= happyPlan.baseUrl %>_/css",
		"images": "<%= happyPlan.baseUrl %>_/i",
		"fonts": "<%= happyPlan.baseUrl %>_/f",
		"webfonts": "<%= happyPlan.baseUrl %>_/f",
		"bower_components": "<%= happyPlan.baseUrl %>_/bc",
		"medias": "<%= happyPlan.baseUrl %>medias"
	},
	"assets": {
		"main": {
			"style": "style.css",
			"script": "vanilla.css"
		}
	},
	"grunt": {
		"jshint": {
			"files": [
				"Gruntfile.js",
				"package.json",
				"happy-plan.json",
				"<%= happyPlan.bower.bowerrc.json %>",
				"<%= happyPlan.paths.src.scripts %>/**/*.js",
				"!<%= happyPlan.paths.src.scripts %>/lib/**/*"
			]
		},
		"uglify": {
			"options": {
				"banner": "/*! <%= pkg.name %> - v<%= pkg.version %> - <%= grunt.template.today('yyyy-mm-dd') %> */\n"
			},
			"files": {
				"<%= happyPlan.paths.build.scripts %>/ieshim.js": ["<%= happyPlan.paths.src.scripts %>/lib/aight.js"],
				"<%= happyPlan.paths.build.scripts %>/vanilla.js": [
					"<%= happyPlan.paths.src.bower_components %>/picturefill/external/matchmedia.js",
					"<%= happyPlan.paths.src.bower_components %>/picturefill/picturefill.js",
					"<%= happyPlan.paths.src.scripts %>/vanilla.js"
				]
			}
		}
	},
	"jekyll": {
		"permalink": "/:categories/:title"
	},
	"compass": {
		"require": [
			"modular-scale",
			"ceaser-easing",
			"compass-recipes"
		],
		"additional_import_paths": [
			"<%= happyPlan.paths.src.bower_components %>",
			"<%= happyPlan.paths.src.bower_components %>/griddle",
			"<%= happyPlan.paths.src.bower_components %>/hint.css/src",
			"<%= happyPlan.paths.src.bower_components %>/pygments-sass-base-theme",
			"<%= happyPlan.paths.src.bower_components %>/"
		],
		"meh": "last path is stupid, it's because of a compass import path issue I think. I should take a deeper look."
	},
	"bower": {
		"bowerrc": {
			"directory" : "<%= happyPlan.paths.src.bower_components %>",
			"json"      : "bower.json"
		},
		"files": []
	}
}
